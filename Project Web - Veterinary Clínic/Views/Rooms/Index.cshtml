@model IEnumerable<Project_Web___Veterinary_Clínic.Data.Entities.Room>

@{
    ViewData["Title"] = "Rooms";
}

<h1>Rooms</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Room</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Name)
            </th>          
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => room.Name)
                </td>               
                <td>
                    <a asp-action="Edit" asp-route-id="@room.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@room.Id" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@room.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
